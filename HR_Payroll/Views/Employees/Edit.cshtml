@model HR_Payroll.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}


<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row justify-content-center">
        <div class="col-lg-12">

            <div class="ibox">
                <div class="ibox-title">
                    <h4><i class="fa fa-th-large"></i> Edit Employee</h4>
                </div>
                <div class="ibox-content">

                    <div class="row">
                        <div class="col-md-12">

                            <form class="form-horizontal m-t" role="form" asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="EmployeeIdNo" class="control-label"></label>
                                            <input asp-for="EmployeeIdNo" class="form-control" type="text" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="EmployeeName" class="control-label"></label>
                                            <input asp-for="EmployeeName" class="form-control" type="text" readonly>
                                            <span asp-validation-for="EmployeeName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="EmployeeBirthdate" class="control-label"></label>
                                            <input asp-for="EmployeeBirthdate" class="form-control" type="text" readonly>
                                            <span asp-validation-for="EmployeeBirthdate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="EmployeeTIN" class="control-label"></label>
                                            <input asp-for="EmployeeTIN" class="form-control" type="text" readonly>
                                            <span asp-validation-for="EmployeeTIN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="EmployeeType" class="control-label"></label>
                                            <select asp-for="EmployeeType" class="form-control" asp-items="@ViewBag.EmployeeType"></select>
                                            <span asp-validation-for="EmployeeType" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="EmployeeGrossSalary" class="control-label"></label>
                                            <input asp-for="EmployeeGrossSalary" class="form-control" type="text" required>
                                            <span asp-validation-for="EmployeeGrossSalary" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="EmployeeTaxRate" class="control-label"></label>
                                            <input asp-for="EmployeeTaxRate" class="form-control" type="number" value="@ViewBag.TaxRate" readonly>
                                            <span asp-validation-for="EmployeeTaxRate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="EmployeeWorkDays" class="control-label"></label>
                                            <input asp-for="EmployeeWorkDays" class="form-control" type="number" step="0.01" required>
                                            <span asp-validation-for="EmployeeWorkDays" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="EmployeeAbsences" class="control-label"></label>
                                            <input asp-for="EmployeeAbsences" class="form-control" type="number" step="0.01" required>
                                            <span asp-validation-for="EmployeeAbsences" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <button type="submit" class="btn btn-info bg-success">Submit</button>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>
